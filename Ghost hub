-- Global state management
local states = {
    speedBoost = false,
    maxSpeedBoost = false,
    infiniteJump = false,
    antiRagdoll = false,
    disableScreenEffects = false,
    disableAnimations = false,
    antiBeeLauncher = false,
    antiAFK = false,
    autoBuyEssentials = false,
    noclip = false, -- Add noclip state for consistency
    espPlayers = false,
    espBox = false,
